                    </VerticalStackLayout>
                </ScrollView>
            </Grid>

        </Grid>
        <Button
            Margin="0,0,0,0"
            BackgroundColor="{StaticResource OptCardDark}"
            Command="{Binding OpenCreateInvoiceCommand}"
