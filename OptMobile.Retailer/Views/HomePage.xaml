                                <CollectionView ItemsSource="{Binding Recommended}">
                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="{x:Type models:ItemMaster}">
                                            <Border
                                                Padding="10"
                                                BackgroundColor="White"
                                                StrokeShape="RoundRectangle 5"
                                                StrokeThickness="0"
                                                WidthRequest="250">
                                                <Border.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HomeViewModel}}, Path=DetailPageNavCommand}" CommandParameter="{Binding .}" />
                                                </Border.GestureRecognizers>
                                                <VerticalStackLayout>
                                                    <Grid HeightRequest="150" WidthRequest="230">
                                                        <Border
                                                            BackgroundColor="#e6e3e2"
                                                            StrokeShape="RoundRectangle 2"
                                                            StrokeThickness="0">
                                                            <Image
                                                                HeightRequest="150"
                                                                Source="{Binding image_url}"
                                                                WidthRequest="230" />
                                                        </Border>
                                                        <Border
                                                            Margin="5"
                                                            Padding="5"
                                                            BackgroundColor="{StaticResource OptCardDark}"
                                                            HorizontalOptions="End"
                                                            StrokeShape="RoundRectangle 10"
                                                            StrokeThickness="0"
                                                            VerticalOptions="Start">
                                                            <Label
                                                                FontAttributes="Bold"
                                                                FontSize="12"
                                                                HorizontalOptions="Center"
                                                                Text="{Binding mrp}"
                                                                TextColor="White" />
                                                        </Border>
                                                    </Grid>

                                                    <Grid
                                                        ColumnDefinitions="Auto,*"
                                                        RowDefinitions="Auto,Auto,Auto"
                                                        RowSpacing="5">
                                                        <Label
                                                            Grid.ColumnSpan="2"
                                                            FontAttributes="Bold"
                                                            FontFamily="PoppinsRegular"
                                                            FontSize="12"
                                                            Text="{Binding item_name}" />
                                                        <Label
                                                            Grid.Row="1"
                                                            FontSize="10"
                                                            Text="{Binding packing}" />
                                                        <Label
                                                            Grid.Row="2"
                                                            FontAttributes="Bold"
                                                            FontSize="14"
                                                            Text="{Binding Ptr}"
                                                            TextColor="{StaticResource OptCardDark}"
                                                            VerticalOptions="Center" />
                                                        <HorizontalStackLayout
                                                            Grid.Row="1"
                                                            Grid.RowSpan="2"
                                                            Grid.Column="1"
                                                            HorizontalOptions="End">
                                                            <ImageButton
                                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HomeViewModel}}, Path=DecrementPurchaseQuantityCommand}"
                                                                CommandParameter="{Binding .}"
                                                                HeightRequest="30"
                                                                IsVisible="{Binding IsMinusButtonVisible}"
                                                                Source="minuscart.png"
                                                                WidthRequest="30" />
                                                            <Label
                                                                HorizontalOptions="CenterAndExpand"
                                                                HorizontalTextAlignment="Center"
                                                                IsVisible="{Binding IsMinusButtonVisible}"
                                                                Text="{Binding Qty}"
                                                                VerticalOptions="Center" />
                                                            <ImageButton
                                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HomeViewModel}}, Path=IncrementPurchaseQuantityCommand}"
                                                                CommandParameter="{Binding .}"
                                                                HeightRequest="30"
                                                                Source="pluscart.png"
                                                                WidthRequest="30" />
                                                        </HorizontalStackLayout>
                                                    </Grid>
                                                </VerticalStackLayout>
                                            </Border>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </Grid>
                        </VerticalStackLayout>
                        <!--  End:: Popular Brand  -->

                        <!--  Start:: Advertisement  -->
                        <Border
                            BackgroundColor="Transparent"
                            HeightRequest="120"
                            HorizontalOptions="FillAndExpand"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Image Aspect="AspectFill" Source="https://erp9i.com/optmed/banner_one.png" />
                        </Border>
                        <!--  End:: Advertisement  -->

                        <!--  Start:: Skin & hair care  -->
                        <Label
                            FontAttributes="Bold"
                            FontFamily="PoppinsBold"
                            FontSize="12"
                            Text="Skin &amp; hair care" />

                        <CollectionView ItemsSource="{Binding Categories}">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout
                                    HorizontalItemSpacing="10"
                                    Orientation="Vertical"
                                    Span="2"
                                    VerticalItemSpacing="10" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:ItemCategoryMaster">
                                    <VerticalStackLayout>
                                        <Border
                                            HeightRequest="90"
                                            StrokeShape="RoundRectangle 5"
                                            StrokeThickness="0">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Offset="0.1" Color="LightPink" />
                                                    <GradientStop Offset="1.0" Color="BlueViolet" />
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <!--<Image Aspect="AspectFill" Source="{Binding image_url}" />-->
                                        </Border>
                                        <Label
                                            FontSize="11"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding category}" />
                                    </VerticalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <!--  End:: Skin & hair care  -->

